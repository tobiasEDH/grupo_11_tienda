<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <link href="/css/usuario.css" rel="stylesheet">
    <title>Registro</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    
    <main class="main-register">
        <section class="registro">
            <div class="perfil">
                <div class="imagen">
                    <img src="/img/users/<%= user.image %>" alt="">
                </div>
                <div class="informacion">
                    <h3><strong>Nombre: </strong><%= user.name %></h3>
                    <h3><strong>Apellido: </strong><%= user.lastName %></h3>
                    <h3><strong>Email: </strong><%= user.email %></h3>
                </div>
            </div>
            <div class="botones">
                <button onclick="window.location.href='/usuario/<%= user.id%>/editar'" id="editar">Editar</button>
                <form method="POST" action="/usuario/<%= user.id%>?_method=DELETE">
                    <button type="submit" onsubmit="confirmSubmit()" id="borrar">Borrar</button>
                </form>
                <% if(locals.userLogged.ID_Usuario == user.id){ %> 
                <button onclick="window.location.href='/usuario/logout'" id="sesion">Cerrar Sesi√≥n</button>
                <% } %> 
            </div>
            <% if(locals.userLogged.isAdmin){ %> 
            <a href="/usuario">Listado de usuarios</a>
            <% } %> 
        </section>
    </main>
    <footer  class="foot">
        <%- include('partials/footer.ejs') %>
    </footer>
    <script>
        function confirmSubmit()
        {
            var agree=confirm("Are you sure you wish to continue?");
            if(agree){
            return true
            }else{
            return false
            }
        }
    </script>
</body>
</html>