<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
  <link href="/css/index.css" rel="stylesheet">
    <title>Inicio</title>
</head> 
<body>
<%- include('partials/header.ejs') %>

 <main>
   <div class="banner">
     <img src="/img/banner1.png">
   </div>
   <section class="ofertas">
    <h3 id="TituloOferta">Ofertas</h3>
<% productos.forEach(productos=>{ %>
  <% if(productos.discount > 0){ %>
    <a href="/productos/<%= productos.id %>"> 
      <article class="productos">
         <div class="item">
           <img src="/img/products/<%= productos.image %>">
         </div>
         <div class="detalle">
           <p id="precio">$<%= productos.price.toLocaleString("es",{minimumFractionDigits: 0})%></p> 
           <p id="descuento"><%= productos.discount %>% OFF</p>
           <p id="producto-nombre"><%= productos.name %></p>
         </div>
      </article>
    </a>
  <% } %>
<% }) %>
   </section>
   <section class="categorias">
    <h3>Categorias</h3>
      <div class="contenedorTotal">
        <div class="contenedores">
          <a href="#">
            <img src="/img/category/img-monitor-34.png">
            <h5>Computadoras</h5>
          </a>
        </div>
        <div class="contenedores">
          <a href="#">
            <img src="/img/category/img-lavarropa.png">
            <h5>Ba√±o</h5>
          </a>
        </div>
        <div class="contenedores">
          <a href="#">
            <img src="/img/category/img-heladera-patrick.png">
            <h5>Cocina</h5>
          </a>
        </div>
      </div>
   </section>
 </main>
 
   <%- include('partials/footer.ejs') %>

</body>
</html>