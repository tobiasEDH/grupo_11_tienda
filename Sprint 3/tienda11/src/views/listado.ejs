<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <link href="/css/listado.css" rel="stylesheet">
    <title>Listado de productos</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <main>
        <% productos.forEach(productos=>{ %>
        <a id="link-producto" href="/productos/<%= productos.id %>">
            <article class="productos">
            <div class="item">
                <img src="/img/products/<%= productos.image%>">
            </div>
            <div class="detalle">
                <p id="precio">$<%= productos.price.toLocaleString("es",{minimumFractionDigits: 0}) %></p>
                <% if(productos.discount >= 1){  %> 
                <p id="descuento"><%= productos.discount%>% OFF</p>
                <% } %> 
                <p id="producto-nombre"><%= productos.name%></p>
            </div>
        </article>
        </a>
        <% }) %>
    </main>
    <%- include('partials/footer.ejs') %>
</body>
</html>